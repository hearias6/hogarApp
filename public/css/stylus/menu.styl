/*
menu-header
menu-bar
menu-user
menu-options
menu-perfil
submenu
*/


.menu-header
  position fixed
  display block
  width 100%
  border-bottom 1px solid #ccc

.menu-bar
  display block
  width 20%
  float left
  font-size 1.5em
  border 1px solid ccc
  padding 0.5%

.menu-user
  display block
  width 75%
  float right
  text-align right
  font-size 1 em
  padding 0.5% 1.5% 0.5% 0.5%

nav.menu-options
  display block
  padding-top: 5%
  width 100%
  border-bottom 1px solid #ccc
  margin-top:0%
  ol, ul
    list-style none
    padding 0px
    li
      display block
      padding 3px 0px 3px 20px
      text-align center
      font-size 1.3em
      a
        &:hover
          text-decoration underline
      ul.submenu, ul.submenu
        li
          padding 0%
          a
            color black
            text-decoration none
            parrafo()
            font-size 0.7em
            &:hover
              color #555

    li.active
      a
        text-decoration underline




