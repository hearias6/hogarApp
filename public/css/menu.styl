.menu-bar
  font-size 1.5em
  text-align center



nav.menu
  display block
  margin-top 0%
  width 100%
  border-bottom 1px solid #ccc
  ol, ul
    list-style none
    padding 0px
    li
      display block
      padding 3px 0px 3px 20px
      text-align center
      font-size 1.3em
      a
        &:hover
          text-decoration underline
    li.active
      text-decoration underline
