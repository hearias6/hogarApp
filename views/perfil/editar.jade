extends ../template/layout

block content
  
  main(class='container')
    section(class='row')
      div(class='col-12')
        h2 Editar perfil
        
        form(class='form')
          input(type='text', name='id' id='id' value='#{resultado[0].perfil_id}')
          
          div(class='control')
            label(for='' class='form-label' name='') Nombre
            input(type="text" class='form-input' name='txtNombre' id='txtNombre' value='#{resultado[0].nombre}')
          
          div(class='control')
            label(for="" class='form-label') Apellido
            input(type="text" class='form-input' name='txtApellido' id='txtApellido' value='#{resultado[0].apellido}')
          
          div(class='control')
            label(for="" class='form-label') Edad
            input(type="text" class='form-input' name='txtEdad' id='txtEdad' value='#{resultado[0].edad}')
                    
          div(class='control')
            label(for="" class='form-label') Telefono
            input(type="text" class='form-input' name='txtTelefono' id='txtTelefono' value='#{resultado[0].telefono}')
                            
          div(class='control')
            label(for="" class='form-label') Fecha Nacimiento
            input(type="text" class='form-input' name='txtFechaNacimiento' id='txtFechaNacimiento' value='#{resultado[0].fecha_nacimiento}')
          
          div(class='control')
            button(class='btnEditarPerfil') actualizar perfil
          
        p da click #[a(href='http://localhost:4040/app/perfil') aqui ] para volver
        
        div(class='msj success hidden')
          div(class='icon-cross close')
          div se ha actualizado con exito.
          
        div(class='msj error hidden')
          div(class='icon-cross close')
          div ahy un error.
        
        
  block script
