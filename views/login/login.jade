extends ../template/layout

block content 
  
  h2(class='header-title text-center') Iniciar sesion  
  form(action="" class='form')
    div.control      
      label(for="email" class="form-label") Email
      input(type="email", class="form-input" placeholder="Ingrese su email" name="email" id="email")
    div.control
      label(for="contrasena" class="form-label") Contraseña
      input(type="password", class="form-input" placeholder="Ingrese su contraseña" name="contrasena" id="contrasena")
    div.control
      button(class='form-button') Login    
    
    a(href="/signup" class="text-center") Crear cuenta
    
    div(class='msj warning') 
      div(class='icon-cross close')
      div warning
      
    div(class='msj error')
      div(class='icon-cross close')
      div error
      
    div(class='msj info') 
      div(class='icon-cross close')
      div info
    
    div(class='msj success')
      div(class='icon-cross close')
      div success
