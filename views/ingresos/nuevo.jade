extends ../template/layout

block content
  
  main(class='container')
    section(class='row')
      div(class='col-12')
        h2 Registrar
      
        form(class='form')
          
          div(class='control')
            label(for="" class='form-label') Categoria 
            select(class='form-combo' name='comboCategoria' id='comboCategoria')              
              each fila in filas
                option(value=fila.tip_ingreso_id)= fila.descripcion
              //- code...
          div(class='control')
            label(for='' class='form-label' name='') valor
            input(type="number" class='form-input' name='txtValor' id='txtValor')
          
          div(class='control')
            button(class='buttonNuevoIngreso') Registrar
        
        center #[a(href="http://localhost:4040/app/ingresos" class="icon-undo2" style='font-size:2em')]
        
        div(class='msj success hidden')
          div(class='icon-cross close')
          div se ha registrado con exito.
          
        div(class='msj error hidden')
          div(class='icon-cross close')
          div ahy un error.
        
        
  block script
