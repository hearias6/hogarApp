// mostrar los 

extends ../template/layout

block content
  
  include ../template/menu.jade
  
  main(class='container')
    
    section(class='row')
      
      
      div(class='col-12')      
        h2 Gastos        
              
        a(href='http://localhost:4040/app/gastos/nuevo') #[span(class='icon icon-plus')]
        p hay #{filas} filas.
        center #[a(href="#" class='icon-file-pdf link-reporte-gasto')]
        
        table(class='tb-center')
          thead
            tr
              th Categoria
              th Valor
              th Fecha Publicacion
              th Opciones
          tbody
            if filas > 0
              each gasto in resultado
                tr
                  td(data-label='Categoria')= gasto.descripcion
                  td(data-label='Valor')= gasto.valor
                  td(data-label='Fecha Publicacion')= gasto.fecha_creacion                
                  td(data-label='Opciones' id='#{gasto.gastos_id}') #[a(href='http://localhost:4040/app/gastos/editar/'+gasto.gastos_id) #[span(class='icon-pencil') ] ] #[a(href='#' class='buttonEliminarGasto') #[span(class='icon-bin')]] 
            else 
              tr 
                td(colspan='4') No hay registros
                
    div(class='msj success hidden')
      div(class='icon-cross close')
      div(class='mensaje') 
                            
    div(class='msj error hidden')
      div(class='icon-cross close')
      div(class='mensaje')                
                
              
  block script 
